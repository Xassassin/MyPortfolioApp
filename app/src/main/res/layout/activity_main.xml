<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/list_title"
        android:id="@+id/title"
        android:layout_weight="1"
        android:layout_column="3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Space
        android:layout_width="fill_parent"
        android:layout_height="20px"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:id="@+id/space"
        android:layout_alignStart="@id/title" />

    <Button
        style="@style/GeneralButtons"
        android:text="Sporify Streamer"
        android:id="@+id/project_01_btn"
        android:enabled="true"
        android:onClick="sendMessage"
        android:layout_below="@+id/space" />

    <Button
        style="@style/GeneralButtons"
        android:text="Football Scores App"
        android:id="@+id/project_02_btn"
        android:enabled="true"
        android:onClick="sendMessage"
        android:layout_below="@+id/space2" />

    <Button
        style="@style/GeneralButtons"
        android:text="Library App"
        android:id="@+id/project_03_btn"
        android:enabled="true"
        android:onClick="sendMessage"
        android:layout_below="@+id/space3" />

    <Button
        style="@style/GeneralButtons"
        android:text="Build It Bigger"
        android:id="@+id/project_04_btn"
        android:enabled="true"
        android:onClick="sendMessage"
        android:layout_below="@+id/space4" />

    <Button
        style="@style/GeneralButtons"
        android:text="XYZ Reader"
        android:id="@+id/project_05_btn"
        android:enabled="true"
        android:onClick="sendMessage"
        android:layout_below="@+id/space5" />

    <Button
        style="@style/MyAppButton"
        android:text="Capstone: My Own App"
        android:id="@+id/project_06_btn"
        android:enabled="true"
        android:onClick="sendMessage"
        android:layout_below="@+id/space6" />

    <Space
        android:layout_width="fill_parent"
        android:layout_height="20px"
        android:layout_below="@+id/project_01_btn"
        android:layout_centerHorizontal="true"
        android:id="@+id/space2" />

    <Space
        android:layout_width="fill_parent"
        android:layout_height="20px"
        android:id="@+id/space3"
        android:layout_below="@+id/project_02_btn"
        android:layout_centerHorizontal="true" />

    <Space
        android:layout_width="fill_parent"
        android:layout_height="20px"
        android:id="@+id/space4"
        android:layout_below="@+id/project_03_btn"
        android:layout_centerHorizontal="true" />

    <Space
        android:layout_width="fill_parent"
        android:layout_height="20px"
        android:id="@+id/space5"
        android:layout_below="@+id/project_04_btn"
        android:layout_centerHorizontal="true" />

    <Space
        android:layout_width="fill_parent"
        android:layout_height="20px"
        android:id="@+id/space6"
        android:layout_below="@+id/project_05_btn"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
